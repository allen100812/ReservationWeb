@page
@model Web0524.Pages.OrderModel
@using System.Linq
@using System.Globalization
@using Web0524.Models
@{
    // 省略其他 Razor Page 內容...
    @if (TempData.ContainsKey("add_success"))
    {
        <script>
            alert('預約成功，您可透過[我的預約清單]查看您的預約');
            // 顯示警告後清除TempData
            setTimeout(function () {
            @(TempData.Remove("add_success"));
            }, 100);
        </script>
    }
    @if (TempData.ContainsKey("success"))
    {
        <script>
            alert('您已成功取消預約。');
            setTimeout(function () {
            @(TempData.Remove("success"));
            }, 100);
        </script>
    }
    @if (TempData.ContainsKey("error"))
    {
        <script>
            alert('發生錯誤，無法取消預約。');
            setTimeout(function () {
            @(TempData.Remove("OrdersetError"));
            }, 100);
        </script>
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Share.css">
    <link rel="stylesheet" href="~/css/wickedcss.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
        function submitForm(sid) {
            // 將sid設置到input元素中
            document.getElementById("sidInput").value = sid;
            // 提交表單
            document.getElementById("orderForm").submit();
        }
    </script>
    <style>
        .flex-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        header {
            text-align: center;
        }
    </style>

    <style>
        .order-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #ccc;
            border-radius: 20px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .order-img img {
            width: 100px; /* 设置图像最大宽度 */
            height: 100px; /* 保持图像高度自动适应 */
            object-fit: cover; /* 保持比例，显示完整图片 */
            border-radius: 10px;
            margin-right: 30px; /* 调整图像和文本之间的间距 */
        }

        .order-details {
            flex: 1; /* 文本部分占据剩余宽度 */
        }

        .order-details-title {
            color: var(--color3);
            line-height: 22px; /* 使用像素设置行高 */
        }

        .order-details-title-history {
            line-height: 22px; /* 使用像素设置行高 */
        }

        .order-details-text {
            margin:5px;
            font-size:14px;
            color: var(--color3_2);
            line-height: 14px; /* 使用像素设置行高 */
        }

        .order-details-text-history {
            font-size: 14px;
            line-height: 14px; /* 使用像素设置行高 */
        }
        .order-button {
            /* 按钮样式 */
          
            margin-left: auto;
            align-self: flex-end; /* 将按钮靠下对齐 */
        }

        .nav-tabs {
            display: flex;
            justify-content: center; /* Centers the tab buttons horizontally */
            margin-bottom: 20px; /* Optional spacing */
        }

        .nav-item {
            margin-right: 20px; /* Adds space between tab buttons */
        }

        #allOrdersContent, #historyOrdersContent {
            min-height: 100vh; /* 最小高度为视口的高度 */
        }

        .custom-text {
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <div class="container page-basetop">
        <header>
            <div class="animation-div">
                <h2 class="header_text heading break-all slideInRight">
                    屬於我美麗的藍圖
                </h2>
            </div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button style="margin-right: 10px;color: var(--color3);" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" role="tab" aria-controls="profile-tab-pane" aria-selected="false" id="allOrdersTab" class="nav-link fx-tobig" data-tab="allOrders">所有訂單</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button style="margin-right: 10px;color: var(--color3);" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" role="tab" aria-controls="profile-tab-pane" aria-selected="false" id="historyOrdersTab" class="nav-link fx-tobig" data-tab="historyOrders">歷史訂單</button>
                </li>
            </ul>
        </header>
            <div class="row">
                <div class="col-md-12">
                    <div id="allOrdersContent" class="content">

                        @if (!Model.Ordersets.Any(o => (o.Event == "0" || o.Event == "1" || o.Event == "9") && o.Date >= Model.TaipeiTime))
                        {
                            <div class="shake" style="margin:10px; text-align:center;">
                            <h3 style="color: var(--color3_2);">尚無預約</h3>
                            </div>
                            
                        }

                        @foreach (var order in Model.Ordersets.Where(o => (o.Event == "0" || o.Event == "1" || o.Event == "9") && o.Date >= Model.TaipeiTime))
                        {
                            DateTime date = Convert.ToDateTime(order.Date);
                            DateTime orderdate = Convert.ToDateTime(order.Orderdate);
                            <form method="post" asp-page-handler="CheckSJ">
                                <input type="hidden" name="sid" value="@order.Sid" />
                            <div class="order-item fx-tobig">
                                    <div class="order-img">
                                        @{
                                            string imageData = order.Photo != null ? Convert.ToBase64String(order.Photo) : null;
                                        }
                                        @if (string.IsNullOrEmpty(imageData))
                                        {
                                            <img src="dist/img/product.jpg" alt="圖片">
                                        }
                                        else
                                        {
                                            <img src="data:image/jpeg;base64,@imageData" alt="圖片">
                                        }
                                    </div>
                                    <div class="order-details">
                                        @{
                                            Place matchingPlace = Model.place.FirstOrDefault(p => p.Placeid == order.Placeid);
                                        }
                                        <div class="order-details-title">
                                            @if (order.Event == "0")
                                            {
                                            <h5>
                                                <span style="color:darkblue"><i class="fas fa-hourglass icon-width"></i>等待接受 <span class="order-details-title custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                            else if (order.Event == "1")
                                            {
                                            <h5>
                                                <span style="color:forestgreen"><i class="fas fa-check icon-width"></i>已被接受 <span class="order-details-title custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                            else if (order.Event == "9")
                                            {
                                            <h5>
                                                <span style="color:red"><i class="fas fa-ban icon-width"></i>已被取消 <span class="order-details-title custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                        </div>
                                        <div class="order-details-text">
                                            @("S" + order.Sid.ToString().PadLeft(6, '0'))
                                        </div>
                                        <div class="order-details-text">
                                        <i class="fas fa-map-marker-alt icon-width"></i> @matchingPlace.Placetitle
                                        </div>
                                        <div class="order-details-text">
                                        <span>@date.ToShortDateString() <i class="fas fa-clock icon-width"></i>@date.ToShortTimeString()</span>
                                        </div>
                                    </div>
                                    <div class="order-button">
                                        <button type="submit" class="btn btn-dark btn-block" data-toggle="modal" data-target="#orderModal">
                                            查看
                                        </button>
                                    </div>
                                </div>


                            </form>
                            <br>
                        }
                    </div>
                    <!-- 容器 2 -->
                    <div id="historyOrdersContent" class="col-md-12 content" style="display: none;">

                    @if (!Model.Ordersets.Any(o => int.Parse(o.Event) > 9 || o.Date < Model.TaipeiTime))
                    {
                        <div style="margin:10px; text-align:center;">
                            <h3 style="color: var(--color3_2);">尚無預約</h3>
                        </div>

                    }
                        @foreach (var order in Model.Ordersets.Where(o => int.Parse(o.Event) > 9 || o.Date < Model.TaipeiTime))
                        {
                            DateTime date = Convert.ToDateTime(order.Date);
                            DateTime orderdate = Convert.ToDateTime(order.Orderdate);
                            <form method="post" asp-page-handler="CheckSJ">
                                <input type="hidden" name="sid" value="@order.Sid" />
                            <div class="order-item fx-tobig">
                                    <div class="order-img">
                                        @{
                                            string imageData = order.Photo != null ? Convert.ToBase64String(order.Photo) : null;
                                        }
                                        @if (string.IsNullOrEmpty(imageData))
                                        {
                                            <img src="dist/img/product.jpg" alt="圖片">
                                        }
                                        else
                                        {
                                            <img src="data:image/jpeg;base64,@imageData" alt="圖片">
                                        }
                                    </div>
                                    <div class="order-details">
                                        @{
                                            Place matchingPlace = Model.place.FirstOrDefault(p => p.Placeid == order.Placeid);
                                        }
                                        <div class="order-details-title-history text-gray-dark">
                                            @if (order.Event == "10")
                                            {
                                            <h5>
                                                <span><i class="fas fa-hourglass"></i>未被接受 <span class="order-details-title-history custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                            else if (order.Event == "11")
                                            {
                                            <h5>
                                                <span><i class="fas fa-check"></i>已完成 <span class="order-details-title-history custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                            else if (order.Event == "19")
                                            {
                                            <h5>
                                                <span><i class="fas fa-ban"></i>已取消 <span class="order-details-title-history custom-text">  @order.Pname</span></span>
                                            </h5>
                                            }
                                        </div>
     
                                        <div class="order-details-text-history text-gray">
                                            @("S" + order.Sid.ToString().PadLeft(6, '0'))
                                        </div>
                                        <div class="order-details-text-history text-gray">
                                            <i class="fas fa-map-marker-alt icon-width"></i> @matchingPlace.Placetitle
                                        </div>
                                        <div class="order-details-text-history text-gray">
                                            <span>@date.ToShortDateString() <i class="fas fa-clock icon-width"></i>@date.ToShortTimeString()</span>
                                        </div>
                                    </div>
                                    <div class="order-button">
                                        <button type="submit" class="btn btn-dark btn-block" data-toggle="modal" data-target="#orderModal">
                                            查看
                                        </button>
                                    </div>
                                </div>


                            </form>
                            <br>
                        }
                    </div>
                </div>

            </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#allOrdersTab").click(function () {
                    $("#allOrdersContent").show();
                    $("#historyOrdersContent").hide();
                });

                $("#historyOrdersTab").click(function () {
                    $("#allOrdersContent").hide();
                    $("#historyOrdersContent").show();
                });
            });
        </script>
    }

</body>
</html>


