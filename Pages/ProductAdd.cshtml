@model Web0524.Pages.ProductAddModel
@{
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@if (TempData.ContainsKey("add_error"))
{
    <script>
        setTimeout(function () {
            alert('該產品名稱已存在');
        @(TempData.Remove("add_error"));
        }, 100);
