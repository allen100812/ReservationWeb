@page
@model Web0524.Pages.PgroupEditModel
@{
}
@if (TempData.ContainsKey("edit_error"))
{
    <script>
        setTimeout(function () {
            alert('該類別名稱已存在');
        @(TempData.Remove("edit_error"));
        }, 100);
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Share.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .form-group label {
            color: var(--color3_2);
        }

        .infotext {
            font-size: 14px;
            color: var(--color3_2);
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#PgroupEditform").submit(function (event) {
                event.preventDefault(); // Prevent the default form submission

                // Construct an array of selected product IDs
                var selectedIds = $("input[name='SelectedProductIds']:checked")
                    .map(function () {
                        return this.value;
                    })
                    .get();

                // Create a hidden input field to hold the array of selected IDs
                $('<input>').attr({
                    type: 'hidden',
                    name: 'SelectedProductIds',
                    value: JSON.stringify(selectedIds)
                }).appendTo('#PgroupEditform');

                // Submit the form
                $("#PgroupEditform")[0].submit();
            });
        });
    </script>

</head>
<body>
    <div class="container page-basetop">
        <header>
            <div class="animation-div">
                <h2 class="header_text heading break-all slideInRight">
                    產品類別更新
                </h2>
            </div>

        </header>
        <form method="post" id="PgroupEditform" enctype="multipart/form-data">
            <div class="form-group" style="display: none;">
                <label>類別編號</label>
                <input asp-for="Pgroup.Pgid" class="form-control" type="number" />
                <span asp-valPidation-for="Pgroup.Pgroupid" class="text-danger"></span>
            </div>

            <div class="form-group alert alert-light alert-form-div" role="alert">
                <table>
                    <tr>
                        <th>
                            <label>類別名稱</label>
                        </th>
                        <td>
                            <p class="infotext">展示於產品頁面中的類別名稱，顧客將依據此名稱辨別不同的類別。</p>
                            <input asp-for="Pgroup.Pgname" class="form-control" title="類別名稱字數需介於2到10之間" maxlength="10" minlength="2" required />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label>描述</label>
                        </th>
                        <td>
                            <textarea asp-for="Pgroup.Pgcontent" class="form-control"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label>
                                排序字元
                                <span class="text-dark" data-bs-toggle="popover" data-bs-content="自訂排序字元例如:A01、A02、B01...，類別排序順序會根據A-Z 0-9的順位排序。">
                                    <i class="far fa-question-circle"></i>
                                </span>
                            </label>
                        </th>
                        <td>
                            <input asp-for="Pgroup.Pgorder" class="form-control" title="排序字元需介於2到5之間" maxlength="5" minlength="2" />
                        </td>
                    </tr>
                </table>
            </div>

            <div class="form-group alert alert-light alert-form-div" role="alert">
                <table>
                    <tr>
                        <th>
                            <label>服務項目</label>
                            
                        </th>
                        <td>
                            <div class="checkbox-list">
                                <p class="infotext">設置後顧客能夠在該類別中選擇此服務。</p>
                                @foreach (var product in Model.Products)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="SelectedProductIds" value="@product.Pid" id="@product.Pid">
                                        @product.Name
                                    </div>
                                }
                            </div>
                        </td>
                    </tr>
                </table>
                <br>
                <br>
                <div style="text-align:end;"><button type="submit" class="btn btn-dark">儲存類別</button></div>
            </div>
        </form>
        <script>
            document.getElementById("switchPgroupSw").addEventListener("change", function () {
                var checkbox = this;
                var hiddenInput = document.querySelector("input[name='Pgroup.PgroupSw']");
                hiddenInput.value = checkbox.checked ? "1" : "0";
            });
        </script>
        <script>
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
            })
        </script>
    </div>

</body>
</html>




