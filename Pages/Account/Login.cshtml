@page
@model Web0524.Pages.Account.LoginModel
@{
    Layout = null;
}
@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData.ContainsKey("add_success"))
{
    <script>
        alert('感謝您，登入後可以立即享受我們的服務。');
        // 顯示警告後清除TempData
        setTimeout(function () {
        @(TempData.Remove("add_success"));
        }, 100);
    </script>
}
<html lang="zh-tw">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["MyName"] | 會員登入</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <script>

        function checkPasswordMatch() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                document.getElementById("passwordError").innerHTML = "兩次輸入密碼不一致";
            } else {
                document.getElementById("passwordError").innerHTML = "";
            }
        }
        function validateForm() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                document.getElementById("passwordError").innerHTML = "兩次輸入密碼不一致";
                return false; // 阻止表单提交
            } else {
                document.getElementById("passwordError").innerHTML = "";
                return true; // 允许表单提交
            }
    </script>
</head>
<body class="hold-transition login-page">


    <div class="login-box">
        <div class="login-logo">
            <a href="../../"><b>@ViewData["MyName"]</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">登入美麗旅程，展現自信風采。</p>

                <form method="post">
                    <div class="input-group mt-3">
                        <input asp-for="UserModel.Id" class="form-control">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="UserModel.Id" class="text-danger"></span>
                    <div class="input-group mt-3">
                        <input asp-for="UserModel.Password" class="form-control">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="UserModel.Password" class="text-danger"></span>
                    <div class="row mt-3 d-flex justify-content-between">
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">登入</button>
                        </div>
                        <div class="col-4">
                            <a href="/UserAdd" class="btn btn-primary btn-block">加入會員</a>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
                <div class="text-danger">@ViewData["ErrorMsg"]</div>
                
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>


</body>
</html>