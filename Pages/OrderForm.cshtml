@page
@model Web0524.Pages.OrderFormModel
@{
}
@if (TempData.ContainsKey("ip_regnum_error"))
{
    <script>
        setTimeout(function () {
            alert('伺服器偵測到您正在嘗試多次註冊，已暫時拒絕提供您的註冊服務。');
        @(TempData.Remove("ip_regnum_error"));
        }, 100);
    </script>
}
@if (TempData.ContainsKey("add_error"))
{
    <script>
        setTimeout(function () {
            alert('會員帳號已存在。');
        @(TempData.Remove("add_error"));
        }, 100);
    </script>
}
<!DOCTYPE html>
<meta charset="utf-8">
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Share.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/compressorjs/1.0.7/compressor.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .form-group label {
            color: var(--color3_2);
        }
    </style>
    <script>

        function checkPasswordMatch() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                document.getElementById("passwordError").innerHTML = "兩次輸入密碼不一致";
            } else {
                document.getElementById("passwordError").innerHTML = "";
            }
        }
        function validateForm() {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirmPassword").value;

            if (password !== confirmPassword) {
                document.getElementById("passwordError").innerHTML = "兩次輸入密碼不一致";
                return false; // 阻止表单提交
            } else {
                document.getElementById("passwordError").innerHTML = "";
                return true; // 允许表单提交
            }
        }
    </script>




    <style>
        .underline-blue {
            text-decoration: underline;
            color: blue;
            cursor: pointer;
        }
        .infotext{
            font-size:14px;
            color:var(--color3_2);
        }
    </style>
</head>
<body>
    <div class="container page-basetop">
        <h2 style="color:var(--color3_2);" class="animate__animated animate__backInLeft"> 即將完成您的首次預約</h2>
        <p class="infotext">
            <a href="/Account/Login">已有會員帳號?</a>
        </p>
        <form method="post" onsubmit="return validateForm()">

            <div class="form-group alert alert-light alert-form-div mb-3 animate__animated animate__fadeInUpBig shadow-box" role="alert">
                <table style="width:100%;">
                    <tr>
                        <th>
                            <label><span class="infotext" style="color:red">*</span>登入帳號</label>
                        </th>
                        <td>
                            <input type="text" id="userInput" asp-for="User.Id" class="form-control" pattern="[A-Za-z0-9]+" title="只能輸入英文和數字，字數需介於6到20之間" maxlength="20" minlength="6" required />
                            <p class="infotext">6-20位英文與數字組成，日後使用此帳號登入會員。</p>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label><span class="infotext" style="color:red">*</span>密碼</label>
                        </th>
                        <td>
                            <input id="password" asp-for="User.Password" type="password" class="form-control" pattern="[A-Za-z0-9]+" title="只能輸入英文和數字，字數需介於6到20之間" maxlength="20" minlength="6" required />
                            <p class="infotext">6-20位英文與數字組成，日後使用此密碼登入會員。</p>
                        </td>
                    </tr>
                     <tr>
                        <th>
                            <label>再次輸入密碼 <span class="infotext" style="color:red">*</span></label>
                        </th>
                        <td>
                            <input id="confirmPassword" type="password" class="form-control" onkeyup="checkPasswordMatch()" pattern="[A-Za-z0-9]+" title="只能輸入英文和數字，字數需介於6到20之間" maxlength="20" minlength="6" required />
                            <div id="passwordError" style="color: red;"></div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label><span class="infotext" style="color:red">*</span>真實姓名</label>
                        </th>
                        <td>
                            <input asp-for="User.Name" class="form-control" title="字數需介於2到10之間" maxlength="10" minlength="1" required />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label><span class="infotext" style="color:red">*</span>生日</label>
                        </th>
                        <td>
                            <input asp-for="User.Birthday" class="form-control" type="date" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label>地址</label>
                        </th>
                        <td>
                            <input asp-for="User.Address" class="form-control" title="字數不可超過75字元" maxlength="150" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label><span class="infotext" style="color:red">*</span>聯絡電話</label>
                        </th>
                        <td>
                            <input asp-for="User.Phone" class="form-control" maxlength="20" minlength="6" required pattern="^\d{6,20}$" title="請輸入有效的電話號碼（只能包含數字，長度6到20之間）" />
                            <p class="infotext" style="color:red">*為確保您的權益，請務必提供正確的聯絡資訊，若商家無法聯繫到您，可能會導致預約無法成立或被取消。</p>
                        </td>
                    </tr>
                    <tr style="display: none;">
                        <th>
                            <label>E-Mail</label>
                        </th>
                        <td>
                            <input asp-for="User.Email" class="form-control" type="email" title="字數不可超過50字元" maxlength="100" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <label>LineID</label>
                        </th>
                        <td>
                            <input asp-for="User.Line" class="form-control" title="字數不可超過50字元" maxlength="100" />
                        </td>
                    </tr>
                 </table>
                 <br>
                <div style="text-align:end;"> <button type="submit" class="btn btn-dark">前往預約</button></div>
                
            </div>



            
        </form>

    </div>

</body>
</html>






